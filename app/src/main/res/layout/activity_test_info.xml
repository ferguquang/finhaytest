<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ngo.ducquang.test.mh11.TestInfoActivity">

    <View
        android:background="@color/colorMain"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </View>

    <FrameLayout
        android:elevation="2dp"
        android:id="@+id/frameLayout"
        android:background="@drawable/back_ground_text_view"
        android:layout_margin="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:id="@+id/text"
                android:textSize="20sp"
                android:textColor="@color/colorMain"
                android:text="Kiểm tra thông chuyển cấu trúc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_co_trang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/icon_asset_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/ic_co_trang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/text2"
                android:layout_marginBottom="16dp"
                android:text="Thay đổi cấu trúc quỹ có thể làm ảnh
hưởng đến lợi nhuận lâu dài của bạn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Bạn chắc chắn thay đổi?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/frameLayout"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:text="TÔI CHẮC CHẮN"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/back_ground_promo"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@color/workTodo"
            android:text="KHÔNG CHUYỂN NỮA"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/back_ground_dont_move"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

</RelativeLayout>
