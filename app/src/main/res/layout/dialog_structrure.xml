<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/back_ground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_correct_2"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_marginTop="64dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="Cấu trúc đầu tư\nphù hợp với bạn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:paddingTop="16dp"
        android:paddingBottom="48dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgAnimal"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_co_trang"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/nameAnimal"
            android:textSize="@dimen/textSize"
            android:text="Cò trắng"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/textSize"
            android:text="Tính cách: Cứng rắn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/llInvest"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/back_ground_main_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:src="@drawable/ic_control_point_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/textSize"
                android:text="ĐẦU TƯ THÊM"
                android:layout_marginLeft="8dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>